<div class="order-summary mb-60" data-hook="order_summary">
  <ul class="cart-items">
    <li class="cart-item">
      <button type="button" class="btn btn-primary remove-btn">Close</button>
      <a href="#" class="thumbnail"><%= image_tag "product-thumb-1.jpg", alt:"product thumbnail" %></a>
      <div class="cart-item-details d-flex flex-column justify-content-between">
        <h4><a href="#">Sample Pack of Flavor Powder</a></h4>
        <div class="price-size text-right"><span>2 x $17.24</span>$34.48</div>
      </div>
    </li>
    <li class="cart-item">
      <button type="button" class="btn btn-primary remove-btn">Close</button>
      <a href="#" class="thumbnail"><%= image_tag "product-thumb-1.jpg", alt:"product thumbnail" %></a>
      <div class="cart-item-details d-flex flex-column justify-content-between">
        <h4><a href="#">Sample Pack of Flavor Powder</a></h4>
        <div class="price-size text-right"><span>1 x $18.39</span>$18.39</div>
      </div>
    </li>
  </ul>
  <div class="promo-code-wrap d-flex align-items-center">
    <input type="text" class="form-control" placeholder="Promo Code">
    <button type="submit" class="btn btn-primary" disabled>Apply</button>
  </div>
  <ul class="cart-totals">
    <li>
      <label><%= Spree.t(:subtotal) %></label>
      <span><%= order.display_item_total.to_html %></span> </li>
    <li>
      <label>Shipping:</label>
      <span>Calculated in next step</span> </li>
    <li>
      <label>Total:</label>
      <strong>$52.87</strong> </li>
  </ul>
</div>
<div class="cart-similar-item phone-hide">
  <div class="wrap">
