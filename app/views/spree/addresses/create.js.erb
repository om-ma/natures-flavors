<% if @address.errors.any? %>
  let new_profile_address_html = "<%= j render partial: 'spree/users/profile/address_section' , locals: {address: @address, btn_title: 'New Address',heading: 'Add New' }  %>"
  $('.js-profile-address-area').html(new_profile_address_html)
<% else %>
  let user_addresses = "<%= j render partial: 'spree/users/profile/user_addresses', locals: {user_addresses: spree_current_user.addresses}  %>"
  $('.js-user-profile-addresses').html(user_addresses)
  $('.js-profile-address-area').html("<%= j render partial: 'spree/users/profile/address_section' , locals: {address: Spree::Address.new, btn_title: 'New Address',heading: 'Add New' }  %>")
<% end %>
  Spree.onAddress();