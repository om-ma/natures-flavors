<% url = spree.product_path(product, taxon_id: taxon.try(:id)) %>
  <div class="col col-12">
    <div class="product-wrap">
    <% cache(taxon.present? ? [I18n.locale, current_currency, taxon, product] : cache_key_for_product(product)) do %>
      
        <%= link_to url, itemprop: "url" do %>
        <div class="product-img">
          <%= product_image(product, itemprop: "image") %>
          <div class="price"><span itemprop="price" content="<%= (product.price_in(current_currency).amount.nil?)? 0 : product.price_in(current_currency).amount.to_d %>">
            <%= display_price(product) %>
          </span>$17.24</div>
        </div>
        <div class="product-desc">
          <h4><%= content_tag(:span, truncate(product.name, length: 50), class: 'info', itemprop: "name", title: product.name) %></h4>
        </div>
        <%end%>
    <% end %>
    </div>
  </div>



