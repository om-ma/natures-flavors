<% if (@product.images + @product.variant_images).uniq.size > 1 %>
<div class="col-xl-7" data-hook="product_left_part" data-hook="product_left_part_wrap">
  <div class="product-gallery-wrap" data-hook="product_thumbnails">
    <ul id="product-gallery"  data-hook data-hook="product_images">
      <% @product.images.each do |i| %>
        <li data-thumb= <%= main_app.url_for(i.url(:product)) %> <%= i.viewable.id %> >
          <%= image_tag(main_app.url_for(i.url(:large))) %>
        </li>
      <% end %>
      <% if @product.has_variants? %>
        <% @product.variant_images.each do |i| %>
          <% next if @product.images.include?(i) %>
          <li <%= i.viewable.id %>>
            <%= link_to(image_tag(main_app.url_for(i.url(:mini)), class: "img-thumbnail"), main_app.url_for(i.url(:product))) %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
<%end%>
