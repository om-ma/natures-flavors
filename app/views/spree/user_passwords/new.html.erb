<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<main class="page-contents">
   <div class="registration-wrapper">
      <div class="row no-gutters">
         <div class="col-lg-6">
            <div>
               <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>        
                  <div id="forgot-password">
                     <div class="title"><%= Spree.t(:forgot_password) %></div>
                        <div>
                           <p><%= Spree.t(:instructions_to_reset_password) %></p>
                           <div class="form-group form-floating has-icon mb-20">
                              <%= f.email_field :email, :class => 'form-control username-control', :placeholder => Spree.t(:email) %>
                              <label>Email Address*</label>
                              <div class="invalid-feedback d-none">
                                 <p>Please enter valid email address!</p>
                              </div>
                           </div>
                           <div class="form-group mb-20">
                           <%= f.submit Spree.t(:reset_password), :class => 'btn btn-primary btn-block' %>
                           </div>
                        </div>
                  </div>
               <%end%>
            </div>               
         </div>
         <div class="col-lg-6">
            <div class="latest-deals">
               <div class="title-wrap d-flex align-items-start justify-content-between margin-0">
                  <div class="left">
                     <div class="sm-title">Natures Flavors</div>
                     <h3 class="title">Latest Deals</h3>
                  </div>
                  <div class="right"><a href="#" class="btn btn-primary">All Deals</a></div>
               </div>
               <div class="products-wrapper d-sm-flex align-items-start">
                  <div class="product-wrap">
                     <a href="#">
                        <div class="product-img">
                           <%= image_tag "product-thumb-1.jpg" %>
                           <div class="price"><span>$24.51</span>$13.51</div>
                        </div>
                        <div class="product-desc">
                           <h4>Acorn Flavored Powder, Natural</h4>
                        </div>
                     </a>
                  </div>
                  <div class="product-wrap">
                     <a href="#">
                        <div class="product-img">
                           <%= image_tag "product-thumb-2.jpg" %>
                           <div class="price"><span>$24.51</span>$13.51</div>
                        </div>
                        <div class="product-desc">
                           <h4>Acai Compound, Natural</h4>
                        </div>
                     </a>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</main>