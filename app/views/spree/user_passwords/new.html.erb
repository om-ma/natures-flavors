<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<main class="page-contents">
   <div class="registration-wrapper">
      <div class="row no-gutters">
         <div class="col-lg-6">
            <div>
               <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>        
                  <div id="forgot-password">
                     <div class="title"><%= Spree.t(:forgot_password) %></div>
                        <div>
                           <p><%= Spree.t(:instructions_to_reset_password) %></p>
                           <div class="form-group form-floating has-icon mb-20">
                              <%= f.email_field :email, :class => 'form-control username-control', :placeholder => Spree.t(:email) %>
                              <label>Email Address*</label>
                              <div class="invalid-feedback d-none">
                                 <p>Please enter valid email address!</p>
                              </div>
                           </div>
                           <div class="form-group mb-20">
                           <%= f.submit Spree.t(:reset_password), :class => 'btn btn-primary btn-block' %>
                           </div>
                        </div>
                  </div>
               <%end%>
            </div>               
         </div>
         <%= render :partial => 'spree/shared/deals_blog' %> 
      </div>
   </div>
</main>