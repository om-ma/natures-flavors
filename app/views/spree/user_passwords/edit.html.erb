<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<main class="page-contents">
  <div class="registration-wrapper">
     <div class="row no-gutters">
        <div class="col-lg-6">
          <div>
            <%= form_for @spree_user, as: :spree_user, url: spree.update_password_path, method: :put do |f| %>
              <div>
                <h1 class="title">Change Password</h1>
              </div>
              <div>
                <div class="form-group mb-20">          
                  <%= f.label :password, Spree.t(:password) %>
                  <%= f.password_field :password, class: "form-control password-control", :placeholder => Spree.t(:password) %>                  
                </div>
                <div class="form-group mb-20">   
                  <%= f.label :password_confirmation, Spree.t(:confirm_password) %>
                  <%= f.password_field :password_confirmation, class: "form-control password-control", :placeholder => Spree.t(:confirm_password) %>
                </div>
                <%= f.hidden_field :reset_password_token %>
                <%= f.submit Spree.t(:update), class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-lg-6">
           <div class="latest-deals">
              <div class="title-wrap d-flex align-items-start justify-content-between margin-0">
                 <div class="left">
                    <div class="sm-title">Natures Flavors</div>
                    <h3 class="title">Latest Deals</h3>
                 </div>
                 <div class="right"><a href="#" class="btn btn-primary">All Deals</a></div>
              </div>
              <div class="products-wrapper d-sm-flex align-items-start">
                 <div class="product-wrap">
                    <a href="#">
                       <div class="product-img">
                          <%= image_tag "product-thumb-1.jpg" %>
                          <div class="price"><span>$24.51</span>$13.51</div>
                       </div>
                       <div class="product-desc">
                          <h4>Acorn Flavored Powder, Natural</h4>
                       </div>
                    </a>
                 </div>
                 <div class="product-wrap">
                    <a href="#">
                       <div class="product-img">
                          <%= image_tag "product-thumb-2.jpg" %>
                          <div class="price"><span>$24.51</span>$13.51</div>
                       </div>
                       <div class="product-desc">
                          <h4>Acai Compound, Natural</h4>
                       </div>
                    </a>
                 </div>
              </div>
           </div>
        </div>
     </div>
  </div>
</main>
