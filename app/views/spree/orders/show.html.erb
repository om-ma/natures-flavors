<main class="page-contents">
  <div class="checkout-wrapper">
    <% if order_just_completed?(@order) %>
      <div class="row no-gutters">
        <div class="col-lg-6 position-relative overflow-hidden">
          <div class="wrap">
            <div class="checkout-confirmation">
              <h1 class="title">You’re all set!</h1>
              <p>Your order <%= @order.number %> will ship shortly. We’ll email you as soon as we have a tracking number at customer@email.com</p>
            </div>
          </div>
          <canvas id="canvas"></canvas>
        </div>
        <div class="col-lg-6">
          <div class="wrap">
            <div class="discounted-product">
              <div class="product-img mb-10"><%= image_tag "product-thumb-3.jpg" %></div>
              <a href="#" class="btn btn-primary btn-block">50% Off On-the-Go Fiber Packets</a> </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
