<% if @cms_page %>
  <% if simple_page?(@cms_page) %>
    <div>
      <%= @cms_page.content.html_safe %>
    </div>

  <% else %>
      <% @cms_page.cms_sections.each do |section| %>
        <%= build_section(section) %>
      <% end %>
  <% end %>
<% end %>
<%= render "spree/shared/cms/pages/edit_mode", edit_mode: @edit_mode %>
