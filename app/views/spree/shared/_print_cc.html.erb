<% if !is_default %>
  <%= link_to user_credit_card_path(payment_source), method: :delete, confirm: Spree.t(:are_you_sure), :remote => remote_option   do %>
    <button type="button" class="btn btn-text">Delete This Card</button>
  <% end %>
<% end  %>
<div>
	<p>
	  <%= payment_source.name %><br />
	  <% if payment_source.last_digits %>
	    <span>**** **** ****</span><span><%= payment_source.last_digits %></span><br />
	  <% end %>
	  <%= Spree.t(:exp) %>: <%= payment_source.month %> / <%= payment_source.year %>
	</p>
</div>







