<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <nav class="breadcrumb-wrap d-flex flex-wrap align-items-center justify-content-between">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item active">Sign In</li>
    </ol>
  </nav>
  <h1 class="title">Sign In</h1>
  <div class="signin-note">Welcome to our new site. If you had an account on our previous system, please reset your password to access the new system by click 
    <%= link_to  spree.recover_password_path do%>
      Forgot your password.
    <%end%>
    Contact us if you need further assistance.
  </div>
  <div class="form-group form-floating has-icon mb-20" id="password-credentials">
    <%= f.email_field :email, class: 'form-control username-control', tabindex: 1, placeholder: Spree.t(:email) %>
    <label>Email Address*</label>
    <div class="invalid-feedback d-none">
      <p>Please enter valid email address!</p>
    </div>
  </div>
  <div class="form-group form-floating has-icon mb-15">
    <%= f.password_field :password, class: 'form-control password-control', tabindex: 2, placeholder: Spree.t(:password) %>
    <label>Password*</label>
  </div>
  <div class="form-group d-flex align-items-center justify-content-between mb-45"><%= link_to Spree.t(:forgot_password), spree.recover_password_path %><%= link_to Spree.t(:Register), spree.signup_path %> </div>
    <%= f.submit Spree.t(:login), class: 'btn btn-primary btn-block', tabindex: 3 %>
<%end%>
