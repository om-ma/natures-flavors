<% max_level = 3 %>

<% if taxon.present? %>
  <% cache [I18n.locale, max_level, taxon] do %>
    <% if taxon.children.where(hide_from_nav: false).any? %>
      <%= taxons_tree(taxon, taxon, max_level) %>
    <% else %>
      <ul class="sidebar-sub-categories">
        <li>
          <%= link_to taxon.name, seo_url(taxon), data: { turbolinks: false } %>
        </li>
      </ul>
    <% end %>
  <% end %>
<% else %>
  <% all_categories = Spree::Taxonomy.all %>
  <% if all_categories.present? %>
    <% all_categories.each do |taxonomy| %>
      <% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
        <%= link_to taxonomy.name, seo_url(taxonomy), data: { turbolinks: false } %>
        <% if taxonomy.root.children.any? %>
          <%= taxons_tree(taxonomy, @taxon, max_level) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>  
<% end %>
<script type="text/javascript">
  $( document ).on('turbolinks:load', function() {
    $(".js_drop_down").click();
    $('body').click()
  });
</script>