<% max_level = Spree::Config[:max_level_in_taxons_menu] || 3 %>
<!-- <nav id="taxonomies"  data-hook> -->
<h4>Categories:</h4>
<% if @taxon.present? %>
  <% cache [I18n.locale, max_level, @taxon] do %>
    <% @taxon = @taxon.parent if @taxon.leaf? %>
    <%#= link_to @taxon.name, seo_url(@taxon) %>
    <% if @taxon.children.any? %>
      <%= taxons_tree(@taxon, @taxon, max_level) %>
    <% end %>
  <% end %>
<% else %>
  <% debugger %>
  <% @product_category.children.each do |taxonomy| %>
    <% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
      <%= link_to taxonomy.name, seo_url(taxonomy) %>
      <% if taxonomy.root.children.any? %>
        <%= taxons_tree(taxonomy, @taxon, max_level) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
