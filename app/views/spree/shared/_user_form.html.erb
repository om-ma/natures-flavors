<div class="form-group form-floating has-icon mb-20" >
  <%= f.email_field :email, :class => 'form-control username-control', placeholder: Spree.t(:email), required: true %>
  <label>Email Address*</label>
</div>
<div class="form-group form-floating has-icon mb-20" >
  <%= f.text_field :first_name, :class => 'form-control username-control', placeholder: Spree.t(:first_name), required: true %>
  <label>First Name*</label>
</div>
<div class="form-group form-floating has-icon mb-20" >
  <%= f.text_field :last_name, :class => 'form-control username-control', placeholder: Spree.t(:last_name), required: true %>
  <label>Last Name*</label>
</div>
<div  class="form-group form-floating has-icon mb-20">
  <%= f.password_field :password, :class => 'form-control password-control', placeholder: Spree.t(:password), required: true %>
  <label>Password*</label>
  <div class="password-hint">Minimum 7 characters. Must include at least 1 letter and 1 number.</div>
</div>
<div  class="form-group form-floating has-icon mb-20">
  <%= f.password_field :password_confirmation, :class => 'form-control password-control', placeholder: Spree.t(:confirm_password), required: true %>
  <label>Confirm Password*</label>
</div>
<div data-hook="signup_below_password_fields"></div>