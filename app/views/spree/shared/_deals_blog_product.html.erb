<% url = spree.product_path(product, taxon_id: "") %>
<% 
  # For spree_yotpo override
  @product = product
%>
            <div class="product-wrap" data-hook="products_list_item">
               <%= link_to url, data: { turbolinks: false } do %>
                  <div class="product-img">
                    <% image_class = "" %>
                     <%= plp_and_carousel_image(product, image_class) %>
                     <div class="price">
                      <% if product&.sale_prices&.active&.present? %>
                        <span> <%= display_original_price(product.lowest_sale_price.price.variant) %></span>
                        <%= product.lowest_sale_price.display_price %>
                      <% else %>
                        <%= display_price(product) %>
                      <% end %>
                    </div>
                  </div>
                  <div class="product-desc">
                     <h4><%= product.name %></h4>
                  </div>
               <% end %>
            </div>