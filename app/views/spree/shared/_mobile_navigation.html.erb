 <div class="mobile-menu">
  <div class="menu-scroll">
    <div class="sub-menu-header d-flex align-items-center">
      <div class="left d-flex align-items-center flex-fill text-uppercase"><%= link_to "Home", root_path %></div>
      <div class="right d-flex align-items-center flex-fill">
        <% if spree_current_user.present? %>
          <%= link_to destroy_spree_user_session_path do %>
            <em class="text-uppercase">Log out</em>
          <% end %>
        <% else %>
          <%= link_to "Log in", new_spree_user_session_path %>
           
          <%= link_to new_spree_user_registration_path, class: "btn" do %>
           or <em class="text-uppercase">Register</em>
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="menu">
      <ul class="product-menu">
        <% if (browser.device.mobile?) %> 
          <% if @all_categories.present? %>
            <% @all_categories.each do |menu_category| %>

              <% if menu_category.users.present? ? (spree_current_user.present? ? menu_category.users.include?(spree_current_user) : false) : true %>
                <li>
                   <%= link_to menu_category.name, seo_url(menu_category) %>
                   <% if menu_category.children.present? %>
                    <ul>
                      <% menu_category.children.each do |category| %>
                        <% if category.users.present? ? (spree_current_user.present? ? category.users.include?(spree_current_user) : false) : true %>
                          <li>
                            <%= link_to category.name, seo_url(category) %>
                          </li>
                        <% end %> 
                      <% end %>
                    </ul>
                  <% end %>  
                </li>
              <% end %>
            <% end %>
          <% end %>      
          <li>
            <% sales_present = Spree::Product.in_sale.present? ? true : false %>
            <% sale_link = sales_present ? sale_path : root_path %>
            <%= link_to "Deals", sale_link %>
            <% if sales_present %>
              <ul>
                <li>
                  <% all_sales_link = sale_link.present? ? sale_path : root_path %>
                  <%= link_to "See All Deals", all_sales_link %>
                </li>
                <li><a href="#">Gluten Free Baking</a></li>
                <li><a href="#">Ingredients</a></li>
                <li><a href="#">Gluten Free Baking Mix</a></li>
                <li><a href="#">Organic Gluten Free Baking</a></li>
              </ul>
            <% end %>  
          </li>
        <% end %>
      </ul>
    </div>
