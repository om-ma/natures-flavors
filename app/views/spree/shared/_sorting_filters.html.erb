<ul class="" style="display:none;">
  <li><%= link_to "Most Popular", request.parameters.merge(sort_by: :descend_by_popularity), id: 'descend_popularity',class: "most-popular" %></li>
  <li><%= link_to "Ascending name", request.parameters.merge(sort_by: 'name-a-z'), id: 'ascending_name',class: "assending-filter" %></li>
  <li><%= link_to "Descending name", request.parameters.merge(sort_by: 'name-z-a'), id: 'descending_name', class: "descending-filter" %></li>
  <li><%= link_to "bestsellers", request.parameters.merge(sorting: :bestsellers), id: 'bestsellers_filter', class: "bestsellers-filter" %></li>
</ul>

<div class="sorting-filter d-flex align-items-center justify-content-end" >
  <label>Sort by:</label>
  <div class="product-sort-js" data-filter-type="most-popular">
    <% active_klass_descending = params[:sort_by].present? && params[:sort_by] == "descend_by_popularity" ? 'active' : '' %>
    <button type="button" class="#{active_klass_descending}">Most Popular</button>
  </div>

  <% if params[:sort_by].present? && params[:sort_by] == "ascend_by_name" %>
    <button type="button" class="active">A to Z </button>
  <%else%>
    <button type="button" class="product-sort-js" data-filter-type="assending-filter">A to Z</button>
  <%end%>

   <div class="product-sort-js" data-filter-type="descending-filter" >
    <% active_klass_descend_by_name = params[:sort_by].present? && params[:sort_by] == "descend_by_name" ? 'active' : '' %>
      <button type="button" class="#{active_klass_descend_by_name} ">Z to A</button>
  </div>

  <div class="product-sort-js" data-filter-type="bestsellers-filter" >
    <% active_klass = params[:sort_by].present? && params[:sort_by] == "bestsellers_filter" ? 'active' : '' %>
    <button type="button" class="#{active_klass}">Best Sellers</button>
  </div>
</div>
