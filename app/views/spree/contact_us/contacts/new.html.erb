<% self.title = "Contact Us" %>
<% meta_tag :description, 'Send us a message' %>

<main class="page-contents">
 <div class="container">
 <h1 class="title">Contact Us</h1>
 <div class="row">
 <div class="col-md-6 contact_page">
 <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3315.456821128331!2d-117.87164854871652!3d33.8005224383047!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80dcd7708f7d8cb5%3A0x2baa7832274ecf66!2s833%20N%20Elm%20St%2C%20Orange%2C%20CA%2092867!5e0!3m2!1sen!2sus!4v1622759459070!5m2!1sen!2sus" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
 833 N. Elm St. Orange, CA 92867
 <h3>714-771-2212</h3>
 </div>
 <div class="col-md-6">
    <%= form_for @contact, :html => {:class => "contact-form"}, :url => contacts_path do |f| %>
      <%= flash_messages %>
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>
      <div class="row narrow-row-md">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">Name<span class="required">*</span></label>
           <%= f.text_field :name, :class => 'form-control', tabindex: 1, :placeholder => "Name" %>
          </div>
        </div>
      </div>
      <div class="row narrow-row-md">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">Email Address<span class="required">*</span></label>
           <%= f.text_field :email, :class => 'form-control', tabindex: 2, :placeholder => "Email Address" %>
          </div>
        </div>
      </div>
      <div class="row narrow-row-md">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">Order #</label>
            <%= f.text_field :order_number, :class => 'form-control', tabindex: 3, :placeholder => "Order Number" %>
          </div>
        </div>
      </div>
      <div class="row narrow-row-md">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">Message<span class="required">*</span></label>
            <%= f.text_area :message, :class => 'form-control', tabindex: 4, :placeholder => "Message" %>
          </div>
        </div>
      </div>
      <% if @show_checkbox_recaptcha %>
        <%= recaptcha_tags %>
      <% else %>
        <%= recaptcha_v3(action: 'contact_us', site_key: ENV['RECAPTCHA_SITE_KEY_V3']) %>
      <% end %>
      This site is protected by reCAPTCHA and the Google
      <a href="/privacy-policy">Privacy Policy</a> and
      <a href="/terms-and-conditions">Terms of Service</a> apply.
      <%= f.submit t('.send_message'), :class => 'btn btn-primary btn-block mt-25', tabindex: 5, :alt => t('.send_message'), :id => 'contact_us_contact_submit', :title => "Send Message" %>
    <% end %>
    </div>
  </div>
</main>