<!doctype html>
<!--[if lt IE 7 ]> <html class="ie ie6" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie ie7" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie ie8" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie ie9" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if gt IE 9]><!--><html lang="<%= I18n.locale %>"><!--<![endif]-->
  <head data-hook="inside_head">
    <%= render partial: 'spree/shared/cookie_consent_banner' %>
    <%= render partial: 'spree/shared/head' %>
    <%= render partial: 'spree/shared/translations' %>
    <%= render partial: 'spree/shared/frontapp_chat' %>
    <%= render partial: 'spree/shared/accessibe' %>
  </head>
  <body id="<%= @body_id || 'default' %>" data-hook="body">
  <% if (Spree::Config[:banner_message].present? && Spree::Config[:banner_message2].blank?) %>
    <div class="top-banner-message"><%= Spree::Config[:banner_message].html_safe %></div>
  <% elsif (Spree::Config[:banner_message].blank? && Spree::Config[:banner_message2].present?) %>
    <div class="top-banner-message"><%= Spree::Config[:banner_message2].html_safe %></div>
  <% elsif Spree::Config[:banner_message].present? && Spree::Config[:banner_message2].present? %>
    <div class="top-banner-message">
      <div id="top-banner-message-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active"><%= Spree::Config[:banner_message].html_safe %></div>
          <div class="carousel-item"><%= Spree::Config[:banner_message2].html_safe %></div>
        </div>
      </div>
      <script>$('.carousel').carousel({interval: 3000})</script>
    </div>
  <% end %>
    <%= render partial: 'spree/shared/trackers/google_tag_manager_body' %>
    <div id="wrapper" class="main-layout-section" data-current-order-number="<%= current_order.try(:number) %>" data-current-order-token="<%=  current_order.try(:token) %>" >
      <%= render partial: 'spree/shared/header' %>
      <div id="overlay" class="overlay hide-on-esc"></div>
      <div data-hook>
        <div id="doofinder-search-results"></div>
        <main id="content" class="page-contents" data-hook>
          <%= yield %>
        </main>
        <%= yield :templates %>
      </div>
      <%= render partial: 'spree/shared/footer' %>
    </div>
  </body>
</html>