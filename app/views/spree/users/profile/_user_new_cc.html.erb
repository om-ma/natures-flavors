<%= render 'spree/shared/error_messages', target: @user_cc %>
<div class="add-edit-form" >
	<h5> Add New Card </h5>
  <%= form_for(@new_cc, url: user_credit_cards_path, method: 'POST', remote: true) do |f| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group form-floating mb-20">
          <% param_prefix = 'payment_source' %>
          <%= text_field_tag "#{param_prefix}[name]", "", { id: "name_on_card_#{payment_method&.id}", class: 'form-control',placeholder:'Name on Card*'} %>
          <%= label_tag "name_on_card#{payment_method&.id}" do %>
            <%= Spree.t(:name_on_card) %><abbr>*</abbr>
          <% end %> 
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group form-floating mb-20" data-hook="card_number">
          <% options_hash = Rails.env.production? ? {autocomplete: 'off'} : {} %>
          <%= text_field_tag "#{param_prefix}[number]", '', options_hash.merge(id: 'card_number', class: 'form-control cardNumber',placeholder:'Card Number*') %>
          <%= label_tag "card_number" do %>
            <%= Spree.t(:card_number) %><abbr>*</abbr>
          <% end %>
          <span id="card_type" style="display:none;">
      ( <span id="looks_like" ><%= Spree.t(:card_type_is) %> <span id="type"></span></span>
        <span id="unrecognized"><%= Spree.t(:unrecognized_card_type) %></span>
      )
     </span>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group form-floating mb-20" data-hook="card_expiration">
          <%= text_field_tag "#{param_prefix}[expiry]", '', id: 'card_expiry', class: "form-control required cardExpiry", placeholder: "Expiration" %>
          <%= label_tag "card_expiry" do %>
            <%= Spree.t(:expiration) %><abbr>*</abbr>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group form-floating mb-20" data-hook="card_code">
          <%= text_field_tag "#{param_prefix}[verification_value]", '', options_hash.merge(id: 'card_code', class: 'form-control required cardCode', size: 5 , placeholder: "Security Code (CVV)*") %>
          <%= label_tag "Security Code (CVV)" do %>
            Security Code (CVV)<abbr>*</abbr>
          <% end %>
        </div>
      </div>
      <%= hidden_field_tag "#{param_prefix}[cc_type]", '', id: "cc_type", class: 'ccType' %>
    <% if current_spree_user.present? %>
      <div class="col-md-12">
        <div class="custom-checkbox mb-15">
          <label>
            <%= check_box_tag "#{param_prefix}[default]", true, true, class: 'custom-control-input'%>
            <span class="custom-control-label"></span>Save Card as Default
          </label>
        </div>
      </div>
    <% end %>
  </div>
      <%= f.submit 'Add  Card', class: 'btn btn-primary' %>
      <%= link_to "Delete This Card",  :method => :delete, :confirm => "Are you sure?", :remote => true, class: "btn btn-text" %>
  <% end %>
</div>
